<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWeather.WeatherPage"
             
             Title="WeatherPage">
    <!--<VerticalStackLayout>
        <Label 
            Text="MAUI Weather"
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
          RowSpacing="20">
        
        <StackLayout Grid.Row="0"
                     Margin="20,20,20,0"
                     Orientation="Horizontal">
            <Frame CornerRadius="35"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="LightGray"
                   BackgroundColor="LightBlue">
                <Label Text="MAUI Weather"
                       HorizontalOptions="Center" />
            </Frame>

            <ImageButton Source="search.png"
                         HeightRequest="30"
                         WidthRequest="30"
                         HorizontalOptions="End" />

        </StackLayout>

        <StackLayout Grid.Row="1"
            Orientation="Vertical">
            
            <Label x:Name="CityLabel"
                   Text="City"
                   HorizontalOptions="Center" 
                   FontSize="50"/>
            <Label x:Name="WeatherLabel"
                   Text="Weather Description"
                   HorizontalOptions="Center" 
                   FontSize="30"/>
            
        </StackLayout>

        <Image Grid.Row="2"
               x:Name="WeatherImage"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               HeightRequest="250"
               WidthRequest="250"
               Source="sun.gif"
               />

        <Label x:Name="TemperatureLabel"
               Grid.Row="3"
               HorizontalOptions="Center"
               Text="80"
               FontSize="75"/>


        <Grid Grid.Row="4"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions=".33*,.33*,.33*"
              Margin="20">

            <Image Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="45" 
                   Source="wind.png"/>
            <Label x:Name="WindLabel"
                     Grid.Row="1"
                     Grid.Column="0"
                     HorizontalOptions="Center"
                     FontSize="20"
                     Text="10mph" />

            <Image Grid.Row="0"
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   HeightRequest="45" 
                   Source="humidity.png"/>
            <Label x:Name="HumidityLabel"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    FontSize="20"
                    Text="60%" />

            <Image Grid.Row="0"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    HeightRequest="45" 
                    Source="barometer-.png"/>
            <Label x:Name="PressureLabel"
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    FontSize="20"
                    Text="1013hPa"/>

        </Grid> 


    </Grid>
    
</ContentPage>